<%= form_for edit_chapter, url: chapter_path do |f| %>
  <% if edit_chapter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(edit_chapter.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
      <% edit_chapter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :chapter_summary %><br>
    <%= f.text_area :chapter_summary, :class=>"form-control", :rows=>"4" %>
  </div>
  <div class="field">
    <%= f.label :chapter_number %><br>
    <%= f.number_field :chapter_number %>
  </div>
  <div class="field">
    <%= f.label :body_text, "Chapter text" %><br>
    <%= f.text_area :body_text, :class=>"form-control" %>
  </div>
  <div class="field">
    <%= f.label :body_audio, "Chapter audio" %><br>
    <% if edit_chapter.body_audio? %>
      <%= link_to 'Download Audio', edit_chapter.body_audio.url, :class => "play" %><br>
    <% end %>
    <%= f.file_field :body_audio %>
  </div>
  <div class="field">
    <%= f.label :body_image, "Chapter image" %><br>
    <% if edit_chapter.body_image? %>
      <%= image_tag edit_chapter.body_image %>
    <% end %>
    <%= f.file_field :body_image %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class=>"btn btn-primary" %>
  </div>
  
<% end %>

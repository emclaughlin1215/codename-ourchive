<div class="row">
  <div class="col-md-3">
    <h4><%= show_chapter.title %></h4>
  </div>
  <div class="col-md-2">
    <h4><%= link_to 'Edit', "#", :class => 'edit_chapter_link', :id => 'show_chapter_'+show_chapter.id.to_s %></h4>
  </div>  
</div>
<br/>
<div style="display:none;" id=<%='edit_partial_'+ show_chapter.id.to_s%>>
	  <div class="form-group">
      <%= label_tag 'summaries', 'Summary', class: "form-header" %>
      <%= text_area_tag 'summaries[]', show_chapter.chapter_summary, class: "form-control", rows: "4" %>
    </div>

    <div class="form-group">
      <%= label_tag 'number', 'Chapter Number', class: "form-header" %><br>
      <%= label_tag show_chapter.chapter_number, show_chapter.chapter_number, class: 'chapter-number' %> - <%= link_to 'Reorder', reorder_work_chapters_work_url, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}%>
    </div>
    <div class="form-group">
      <%= label_tag 'text', 'Text', class: "form-header" %>
      <%= text_area_tag 'body_texts[]', show_chapter.body_text, class: "form-control", rows: "20" %>
    </div>
    <div class="form-group">
      <%= label_tag 'audio', 'Audio', class: "form-header" %>
      <% if show_chapter.chapter_audio %>
        <div class="row">
          <%= link_to 'Download Audio', show_chapter.chapter_audio.url, :class => "play col-md-4" %>
        </div>
        <br>
      <% end %>
      <div class="row">
        <%= file_field_tag 'body_audios[]', :id => 'body_audio_'+show_chapter.id.to_s, class: 'body-audios col-md-4' %>
        <%= link_to 'Delete existing', delete_chapter_audio_work_url(:chapter_id => show_chapter.id), class: 'col-md-4' %>
      </div>
      <%= hidden_field_tag 'body_audios_stub[]', '', :id => 'stub_audio_'+show_chapter.id.to_s, class: 'body-audios-stub'  %>
    </div>
    <div class="form-group">
      <%= label_tag 'image', 'Image', class: "form-header" %>
      <% if show_chapter.body_image? %>
        <div class="row">
          <%= image_tag(show_chapter.body_image, class: 'col-md-6') %>
        </div>
        <br>
      <% end %>
      <div class="row">
        <%= file_field_tag 'body_images[]', :id => 'body_image_'+show_chapter.id.to_s, class: 'body-images col-md-4' %> 
        <%= link_to 'Delete existing', delete_chapter_image_work_url(:chapter_id => show_chapter.id), class: 'col-md-4' %>
      </div>
      <%= hidden_field_tag 'body_images_stub[]', '', :id => 'stub_image_'+show_chapter.id.to_s, class: 'body-images-stub'  %>
    </div>
</div>
<hr>


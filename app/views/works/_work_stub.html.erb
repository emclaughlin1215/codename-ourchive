<% cache work do %>
<div class="panel panel-default">
<div class="panel-body">
  <div class="row">
    <div class="col-md-12"><h3><%= link_to work.title, work_path(work.id) %> by <%= link_to work.user.username, creator_profile_url(:user_id => work.user.id) %></h3></div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-1"><h5><%= work.work_summary %></h5></div>
  </div>
  <div class="row">
    <div class="col-md-2"><h5>Chapters: <%= work.chapters.count %></h5></div>
    <div class="col-md-2"><h5>Complete? <% if work.is_complete %>Yes<% else %>No<%end%></h5></div>
    <div class="col-md-2"><h5>Word Count: <%= work.word_count %></h5></div>
  </div>
  </div>
  <div class="panel-footer">
  <div class="row">
    <div class="col-md-12"> <ul class="list-inline">
      <li><%= TagConfig.config["0"]["friendly"] %>:</li>
          <% work.tags.select{|tag| tag.type_key == 0}.each do |t| %>
            <li><%= t.text %></li>
          <% end %>
        </ul>
    </div>
  </div> 
  <div class="row">
    <div class="col-md-12"><ul class="list-inline">
      <li><%= TagConfig.config["1"]["friendly"] %>:</li>
          <% work.tags.select{|tag| tag.type_key == 1}.each do |t| %>

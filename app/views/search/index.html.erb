<%= form_tag(search_works_path, :method => 'get') do %>
<div class="form-inline">
  <%= text_field_tag :search_term, nil, :placeholder => 'Search for a work', :class => 'form-control' %>
  <select id="work_type" name="work_type">
    <%= options_for_select(@work_types) %> 
  </select>
  <select id="tag_type" name="tag_type">
    <%= options_for_select([[TagConfig.config["0"]["friendly"], 0], [TagConfig.config["1"]["friendly"], 1], [TagConfig.config["2"]["friendly"], 2], [TagConfig.config["3"]["friendly"], 3], [TagConfig.config["4"]["friendly"], 4], ["All", "All"]]) %>
  </select>
  <%= submit_tag "search",  :class => 'btn btn-default'%>
</div>
<% end %>

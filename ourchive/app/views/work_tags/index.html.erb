<p id="notice"><%= notice %></p>

<h1>Listing Work Tags</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Work</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_tags.each do |work_tag| %>
      <tr>
        <td><%= work_tag.tag_id %></td>
        <td><%= work_tag.work_id %></td>
        <td><%= link_to 'Show', work_tag %></td>
        <td><%= link_to 'Edit', edit_work_tag_path(work_tag) %></td>
        <td><%= link_to 'Destroy', work_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

